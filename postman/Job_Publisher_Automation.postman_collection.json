        {
          "name": "Change Publisher Tier",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tier\": \"pro\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/{{apiVersion}}/admin/subscriptions/PUBLISHER_ID/tier",
              "host": ["{{baseUrl}}"],
              "path": ["api", "{{apiVersion}}", "admin", "subscriptions", "PUBLISHER_ID", "tier"]
