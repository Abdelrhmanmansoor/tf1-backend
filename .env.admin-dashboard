# Admin Dashboard Environment Configuration

# ================== ADMIN DASHBOARD SETTINGS ==================

# الرابط الأساسي لـ Admin Dashboard
ADMIN_DASHBOARD_URL=https://yourdomain.com/sys-admin-secure-panel

# Frontend URL for Dashboard (React/Next.js)
REACT_APP_ADMIN_API_URL=https://yourdomain.com/sys-admin-secure-panel/api

# ================== ENCRYPTION & SECURITY ==================

# Encryption Key (32 characters hex) - Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-character-hex-encryption-key-here

# JWT Secret for token generation
JWT_SECRET=your-super-secret-jwt-key-change-this

# CSRF Token Secret
CSRF_TOKEN_SECRET=your-csrf-secret-key

# Session timeout in milliseconds (default: 1 hour)
SESSION_TIMEOUT=3600000

# ================== DATABASE ==================

# MongoDB Connection String
MONGODB_URI=mongodb://localhost:27017/sportsplatform
# Or for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/sportsplatform

# ================== EMAIL CONFIGURATION ==================

# Email Provider (smtp, sendgrid, mailgun, aws-ses)
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Sender Details
EMAIL_FROM_ADDRESS=admin@yourdomain.com
EMAIL_FROM_NAME=Sports Platform Admin

# ================== BACKUP CONFIGURATION ==================

# Backup Directory
BACKUP_DIR=./backups

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# Auto Backup Enabled
BACKUP_AUTO_ENABLED=true

# Backup Schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"

# ================== STORAGE CONFIGURATION ==================

# Storage Provider (local, s3, cloudinary, azure)
STORAGE_PROVIDER=local

# Max File Size (bytes) - default 50MB
